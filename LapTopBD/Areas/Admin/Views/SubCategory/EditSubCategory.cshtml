@model LapTopBD.ViewModels.SubCategoryViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa Danh Mục Phụ";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
            <h2 class="text-center mb-4">Chỉnh sửa Danh Mục Phụ</h2>

            <form id="editSubCategoryForm">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label for="CategoryId">Danh mục chính</label>
                    <select asp-for="CategoryId" class="form-control" id="CategoryId" required>
                        <option value="">Chọn danh mục chính</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.CategoryName</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="SubCategoryName">Tên danh mục phụ</label>
                    <input asp-for="SubCategoryName" class="form-control" id="SubCategoryName" required />
                </div>

                <div class="mt-3 d-flex justify-content-between">
                    <button type="button" id="saveSubCategoryBtn" class="btn btn-primary btn-block">Lưu</button>
                    <a asp-action="ListSubCategory" class="btn btn-secondary btn-block">Hủy</a>
                </div>

                <div id="message" class="mt-3"></div>
            </form>
        </div>
    </div>
</div>


