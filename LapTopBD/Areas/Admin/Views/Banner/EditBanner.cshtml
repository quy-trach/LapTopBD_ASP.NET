
@model LapTopBD.ViewModels.BannerViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa Banner";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
            <h2 class="text-center mb-4">Chỉnh sửa Banner</h2>

            <form id="editBannerForm" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label for="bannerTitle">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" id="bannerTitle" required />
                </div>

                <div class="form-group">
                    <label for="bannerImage">Hình ảnh</label>
                    <div class="banner-upload-area">
                        <input type="file" class="banner-file-input" id="bannerImage" name="ImageFile" accept="image/*">
                        <span class="banner-upload-hint">
                            <i class="ri-image-add-fill"></i>
                        </span>
                        <img id="bannerPreview" class="banner-image-preview" src="@Model.ImageUrl" alt="Ảnh xem trước">
                    </div>
                </div>

                <div class="form-group">
                    <label for="bannerStatus">Trạng thái</label>
                    <select class="form-control" id="bannerStatus" name="Status">
                        @if (Model.Status)
                        {
                            <option value="true" selected>Hiển thị</option>
                            <option value="false">Ẩn</option>
                        }
                        else
                        {
                            <option value="true">Hiển thị</option>
                            <option value="false" selected>Ẩn</option>
                        }
                    </select>
                </div>

                <div class="mt-3 d-flex justify-content-between">
                    <button type="button" id="saveEditBannerBtn" class="btn btn-primary btn-block">Lưu</button>
                    <a asp-action="ListBanner" asp-controller="Banner" class="btn btn-secondary btn-block">Hủy</a>
                </div>

                <div id="message" class="mt-3"></div>
            </form>
        </div>
    </div>
</div>
