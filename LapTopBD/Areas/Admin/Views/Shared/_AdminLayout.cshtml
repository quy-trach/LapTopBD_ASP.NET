<!DOCTYPE html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="shortcut icon" href="~/favicon.ico">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/icons.min.css" rel="stylesheet" />
    <link href="~/css/app.min.css" rel="stylesheet" />
    <link href="~/css/custom.min.css" rel="stylesheet" />
    <link href="~/css/dropzone.css" rel="stylesheet" />
    <link href="~/css/glightbox.min.css" rel="stylesheet" />
    <link href="~/css/ckeditor5.css" rel="stylesheet" />
    <link href="~/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/css/lc_lightbox.min.css" rel="stylesheet" />
    <link href="~/css/skins/dark.css" rel="stylesheet" />
    <link href="~/css/skins/light.css" rel="stylesheet" />
    <link href="~/css/skins/minimal.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    <div id="layout-wrapper">
        <!-- ucTopBar -->
        <header id="page-topbar">
            <div class="layout-width">
                <div class="navbar-header">
                    <div class="d-flex">
                        <!-- LOGO -->
                        <div class="navbar-brand-box horizontal-logo">
                            <a href="#" class="logo logo-dark">
                                <span class="logo-sm">
                                    <img src="/assets/images/logo-sm.png" alt="" height="22">
                                </span>
                                <span class="logo-lg">
                                    <img src="/assets/images/logo-dark.png" alt="" height="17">
                                </span>
                            </a>

                            <a href="#" class="logo logo-light">
                                <span class="logo-sm">
                                    <img src="/assets/images/logo-sm.png" alt="" height="22">
                                </span>
                                <span class="logo-lg">
                                    <img src="/assets/images/logo-light.png" alt="" height="17">
                                </span>
                            </a>
                        </div>

                        <button type="button" class="btn btn-sm px-3 fs-16 header-item vertical-menu-btn topnav-hamburger"
                                id="topnav-hamburger-icon">
                            <span class="hamburger-icon">
                                <span></span>
                                <span></span>
                                <span></span>
                            </span>
                        </button>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="ms-1 header-item d-none d-sm-flex">
                            <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle"
                                    data-toggle="fullscreen">
                                <i class='bx bx-fullscreen fs-22'></i>
                            </button>
                        </div>

                        <div class="dropdown topbar-head-dropdown ms-1 header-item" id="notificationDropdown">
                            <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle"
                                    id="page-header-notifications-dropdown" data-bs-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                <i class='bx bx-bell fs-22'></i>
                                <span class="position-absolute topbar-badge fs-10 translate-middle badge rounded-pill bg-danger" id="orderCountBadge">
                                    0<span class="visually-hidden">unread messages</span>
                                </span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end">
                                <!-- item-->
                                <h6 class="dropdown-header">Xin chào @User.Identity?.Name!</h6>

                                <a class="dropdown-item" href="javascript:void(0);" id="newOrdersLink">
                                    <i class=" ri-file-list-3-line"></i>
                                    <span class="align-middle">Thông tin đơn hàng</span>
                                </a>

                                <!-- Khu vực hiển thị số lượng đơn hàng mới -->
                                <div id="newOrdersInfo" class="dropdown-item-text text-center" style="display: none;">
                                    <p id="newOrdersCount" class="mb-0"></p>
                                </div>
                            </div>
                        </div>

                        <div class="dropdown ms-sm-3 header-item topbar-user">
                            <button type="button" class="btn" id="page-header-user-dropdown" data-bs-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                <span class="d-flex align-items-center">
                                    <img src="@(User.Claims.FirstOrDefault(c => c.Type == "Avatar")?.Value ?? "/avatar/default-avatar.png")" alt="Admin Avatar" width="50" height="50" class="rounded-circle">
                                    <span class="text-start ms-xl-2">
                                        <span class="d-none d-xl-inline-block ms-1 fw-medium user-name-text">
                                            @(User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value ?? User.Identity?.Name)
                                        </span>
                                        <span class="d-none d-xl-block ms-1 fs-12 text-muted user-name-sub-text">
                                            @User.FindFirst(ClaimTypes.Role)?.Value
                                        </span>
                                    </span>
                                </span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end">
                                <!-- item-->
                                <h6 class="dropdown-header">Xin chào @User.Identity?.Name!</h6>
                              
                                <a class="dropdown-item" href="@Url.Action("Logout", "Auth")">
                                    <i class="mdi mdi-logout text-muted fs-16 align-middle me-1"></i>
                                    <span class="align-middle">Đăng xuất</span>
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- ucTopBar./. -->
        <!-- ucMenu-->
        <div class="app-menu navbar-menu">
            <!-- MENU LOGO -->
            <div class="navbar-brand-box">
                <!-- Dark Logo-->
                <a href="index.html" class="logo logo-dark">
                    <span class="logo-sm">
                        <img src="~/images/logo-sm.png" alt="" height="22" asp-append-version="true">
                    </span>
                    <span class="logo-lg">
                        <img src="~/images/logo-light.png" alt="" height="85" asp-append-version="true">
                    </span>
                </a>
                <!-- Light Logo-->
                <a href="index.html" class="logo logo-light">
                    <span class="logo-sm">
                        <img src="~/images/logo-sm.png" alt="" height="22" asp-append-version="true">
                    </span>
                    <span class="logo-lg">
                        <img src="~/images/logo-light.png" alt="" height="85" asp-append-version="true">
                    </span>
                </a>

                <button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover" id="vertical-hover">
                    <i class="ri-record-circle-line"></i>
                </button>
            </div>

            <!-- MENU LIST -->
            <div id="scrollbar">
                <div class="container-fluid">

                    <div id="two-column-menu">
                    </div>
                    <ul class="navbar-nav" id="navbar-nav">
                        <li class="menu-title"><span>DASHBOARDS</span></li>
                        <!-- Index -->
                        <li class="nav-item">
                            <a class="nav-link menu-link" href="@Url.Action("Dashboard", "Admin")">
                                <i class="ri-home-4-line"></i>
                                <span>Dashboards</span>
                            </a>
                        </li>


                        <li class="menu-title"><span>AUTHENCATION</span></li>

                        <!-- Account -->
                        <li class="nav-item">
                            <a class="nav-link menu-link" href="#group2" data-bs-toggle="collapse">
                                <i class="ri-account-circle-line"></i>
                                <span>Tài khoản</span>
                            </a>
                            <div class="collapse menu-dropdown" id="group2">
                                <ul class="nav nav-sm flex-column">
                                    <li class="nav-item">
                                        <a href="@Url.Action("ListAdmins", "Admin")" class="nav-link">Tài khoản Admin</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("ListUsers", "Admin")" class="nav-link">Tài khoản User</a>
                                    </li>
                                    
                                </ul>
                            </div>
                        </li>

                        <li class="menu-title"><span>PAGES</span></li>

                        <!-- Danh mục -->
                        <li class="nav-item">
                            <a class="nav-link menu-link" href="#group3" data-bs-toggle="collapse">
                                <i class="ri-file-list-3-line"></i>
                                <span data-key="t-forms">Danh mục</span>
                            </a>
                            <div class="collapse menu-dropdown" id="group3">
                                <ul class="nav nav-sm flex-column">
                                    <li class="nav-item">
                                        <a href="@Url.Action("ListCategory", "Category")" class="nav-link">Danh mục chính</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("ListSubCategory", "SubCategory")" class="nav-link">Danh mục phụ</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                      
                        <!-- Product -->
                        <li class="nav-item">
                            <a class="nav-link menu-link" href="@Url.Action("ListProducts","Products")" >
                                <i class="ri-file-list-3-line"></i>
                                <span data-key="t-forms">Sản phẩm</span>
                            </a>
                        </li>
                        <!-- Banner -->
                        <li class="nav-item">
                            <a class="nav-link menu-link" href="@Url.Action("ListBanner","Banner")">
                                <i class="ri-file-list-3-line"></i>
                                <span data-key="t-forms">Banners</span>
                            </a>
                        </li>

                        <!-- Order -->
                        <li class="nav-item">
                            <a class="nav-link menu-link" href="@Url.Action("ListOrders","Order")">
                                <i class="ri-file-list-3-line"></i>
                                <span data-key="t-forms">Đơn hàng</span>
                            </a>

                        </li>
                    </ul>
                </div>
                <!-- Sidebar -->
            </div>
            <div class="sidebar-background"></div>
        </div>
        <div class="vertical-overlay"></div><!-- Vertical Overlay-->
        <!-- ucMenu./.-->

        <div class="main-content">
            <!-- PAGE-WRAPPER -->
            <div class="page-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">

                                <!-- HeadingMain -->
                                <h4 class="mb-sm-0">
                                </h4>
                                <!-- HeadingMain./. -->
                                <!-- ucBreadcrumb -->
                                @* <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="#">Dasboard</a></li>
                                        <li class="breadcrumb-item active">Title</li>
                                    </ol>
                                </div> *@
                                <!-- ucBreadcrumb./. -->
                            </div>
                        </div>
                    </div>

                    <!-- ContentMain -->
                    @RenderBody()
                    <!-- ContentMain./. -->

                </div>
            </div>
            <!-- PAGE-WRAPPER./. -->
            <!-- ucFooter -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center">
                                <p class="mb-0">
                                    &copy;
                                    <script>document.write(new Date().getFullYear())</script> ASP.NET CORE MVC Academy
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- ucFooter./. -->
        </div>
    </div>
    <!-- BdScript -->
    <script src="~/js/layout.js"></script>
    <script src="~/js/signalr.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/simplebar.min.js"></script>
    <script src="~/js/waves.min.js"></script>
    <script src="~/js/ckeditor.js"></script>
    <script src="~/js/dropzone-min.js"></script>
    <script src="~/js/glightbox.min.js"></script>
    <script src="~/js/lord-icon-2.1.0.js"></script>
    <script src="~/js/particles.js"></script>
    <script src="~/js/particles.app.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/ckeditor.js"></script>
    <script src="~/js/lc_lightbox.lite.min.js"></script>
    <script src="~/js/alloy_finger.min.js"></script>
    <script src="~/js/script.js"></script>



</body>
</html>
